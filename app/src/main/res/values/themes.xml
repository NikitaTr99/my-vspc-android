<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyVSPC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Nav bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.MyVSPC.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyVSPC.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Nav bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@android:color/transparent</item>
    </style>

    <style name="Theme.MyVSPC.ToolBar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MyVSPC.ToolBar.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="NewsCardsText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#4D000000</item>
    </style>

    <style name="NewsDetailText">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


    <style name="NewsCardsText.NewsTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NewsCardsText.NewsSubTitle">
        <item name="android:alpha">0.85</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NewsDetailText.NewsTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NewsDetailText.NewsSubTitle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="NewsCardsText.NewsAuthorTime">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="NewsCardsText.NewsType">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsCardsText.NewsType.Shadow">
        <item name="android:shadowRadius">3</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
    </style>

    <style name="LessonCard">
        <item name="cardBackgroundColor">@color/colorLessonCardLight</item>
        <item name="cardElevation">0dp</item>
    </style>


    <style name="Widget.MaterialComponents.NavigationView.DrawerNavigation">
    </style>


</resources>